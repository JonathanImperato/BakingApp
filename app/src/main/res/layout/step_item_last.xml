<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <TextView

        android:id="@+id/stepNumber"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/rtextview"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stepNumber"
        app:layout_constraintStart_toEndOf="@+id/stepNumber" />

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="#BDBDBD"
        app:layout_constraintBottom_toTopOf="@id/stepNumber"
        app:layout_constraintLeft_toLeftOf="@id/stepNumber"
        app:layout_constraintRight_toRightOf="@id/stepNumber"
        tools:layout_editor_absoluteX="24dp"></View>
